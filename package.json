{
  "name": "copy-info-with-context",
  "displayName": "Copy Info with Context",
  "description": "Copy code snippets with intelligent contextual information - filename, line numbers, and smart path detection for structured data. Perfect for documentation, code reviews, debugging, and sharing code with proper attribution.",
  "version": "1.3.1",
  "publisher": "DonaldChan",
  "author": {
    "name": "Donald Chan",
    "email": "donald@iendeavour.com.au"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dwmchan/copy-info-with-context.git"
  },
  "homepage": "https://github.com/dwmchan/copy-info-with-context#readme",
  "bugs": {
    "url": "https://github.com/dwmchan/copy-info-with-context/issues"
  },
  "keywords": [
    "copy",
    "snippet",
    "context",
    "line-numbers",
    "json-path",
    "xml-path",
    "function-context",
    "code-sharing",
    "documentation",
    "syntax-highlighting",
    "javascript",
    "typescript", 
    "python",
    "csharp",
    "xml",
    "html",
    "css",
    "scss",
    "sass",
    "less",
    "yaml",
    "csv",
    "tsv",
    "psv",
    "delimited",
    "data-files",
    "color-coding"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copyInfoWithContext.copySelection",
        "title": "Copy Info with Context",
        "category": "Copy Info with Context"
      },
      {
        "command": "copyInfoWithContext.copySelectionCustom",
        "title": "Copy Info with Context (Custom Format)",
        "category": "Copy Info with Context"
      },
      {
        "command": "copyInfoWithContext.copySelectionHTML",
        "title": "Copy Info with Context (Colored HTML)",
        "category": "Copy Info with Context"
      },
      {
        "command": "copyInfoWithContext.cycleCsvOutputMode",
        "title": "CSV Intelligence: Cycle Output Mode (Minimal → Smart → Table → Detailed)",
        "category": "Copy Info with Context"
      }
    ],
    "configuration": {
      "title": "Copy Info with Context",
      "properties": {
        "copyInfoWithContext.showLineNumbers": {
          "type": "boolean",
          "default": true,
          "description": "Show line numbers on each line of copied code"
        },
        "copyInfoWithContext.lineNumberPadding": {
          "type": "boolean",
          "default": false,
          "description": "Add padding to line numbers for consistent alignment"
        },
        "copyInfoWithContext.showContextPath": {
          "type": "boolean",
          "default": true,
          "description": "Show contextual path information (JSON paths, XML paths, function/class names)"
        },
        "copyInfoWithContext.enableColorCoding": {
          "type": "boolean",
          "default": false,
          "description": "Enable syntax highlighting/color coding in copied text (HTML format)"
        },
        "copyInfoWithContext.colorTheme": {
          "type": "string",
          "enum": ["dark", "light"],
          "default": "dark",
          "description": "Color theme for syntax highlighting (dark or light)"
        },
        "copyInfoWithContext.showArrayIndices": {
          "type": "boolean",
          "default": true,
          "description": "Show array indices in context paths (e.g., users[0], items[1])"
        },
        "copyInfoWithContext.maxFileSize": {
          "type": "number",
          "default": 5000000,
          "minimum": 100000,
          "maximum": 50000000,
          "description": "Maximum file size to process (bytes). Files larger than this will show a warning."
        },
        "copyInfoWithContext.xmlIndexingMode": {
          "type": "string",
          "enum": ["local", "global"],
          "enumDescriptions": [
            "Count within parent container (Party[0], Party[1] per Parties container)",
            "Count across entire document (Party[0] through Party[N] globally)"
          ],
          "default": "local",
          "description": "XML element indexing mode: 'local' counts within parent container, 'global' counts across entire document"
        },
        "copyInfoWithContext.largeFileLineThreshold": {
          "type": "number",
          "default": 20000,
          "minimum": 5000,
          "maximum": 50000,
          "description": "Line count threshold for performance mode (skips complex indexing for large files)"
        },
        "copyInfoWithContext.largeFileCharThreshold": {
          "type": "number",
          "default": 100000,
          "minimum": 10000,
          "maximum": 1000000,
          "description": "Character count threshold for performance mode"
        },
        "copyInfoWithContext.csvOutputMode": {
          "type": "string",
          "enum": ["minimal", "smart", "table", "detailed"],
          "enumDescriptions": [
            "Minimal - Compact output with column names (current behavior)",
            "Smart - Adds data types and key related fields",
            "Table - ASCII table format for multi-row/column selections",
            "Detailed - Full intelligence with analytics and insights"
          ],
          "default": "minimal",
          "description": "Output format for CSV files"
        },
        "copyInfoWithContext.csvTableShowTypes": {
          "type": "boolean",
          "default": true,
          "description": "Show data types below table in TABLE mode"
        },
        "copyInfoWithContext.csvTableMaxRows": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum rows to show in table format"
        },
        "copyInfoWithContext.csvTableMaxColumns": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum columns to show in table format"
        },
        "copyInfoWithContext.csvTableAlignNumbers": {
          "type": "string",
          "enum": ["left", "right"],
          "default": "right",
          "description": "Alignment for numeric columns in tables"
        },
        "copyInfoWithContext.enableDataMasking": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic detection and masking of sensitive data (PII)"
        },
        "copyInfoWithContext.maskingMode": {
          "type": "string",
          "enum": ["auto", "manual", "strict"],
          "enumDescriptions": [
            "Mask common PII patterns automatically (email, phone, SSN, banking info)",
            "Only mask when explicitly selected columns/patterns match deny-list",
            "Mask all potential PII with high sensitivity (may have false positives)"
          ],
          "default": "auto",
          "description": "Data masking detection sensitivity"
        },
        "copyInfoWithContext.maskingStrategy": {
          "type": "string",
          "enum": ["partial", "full", "structural", "hash"],
          "enumDescriptions": [
            "Partial masking - Show first/last characters (j***@e***.com)",
            "Full masking - Complete replacement with asterisks (***)",
            "Structural masking - Preserve format (***-**-1234)",
            "Hash masking - Deterministic hash codes (#A3F8B2)"
          ],
          "default": "partial",
          "description": "Default masking strategy for detected PII"
        },
        "copyInfoWithContext.maskingPreset": {
          "type": "string",
          "enum": ["none", "basic", "financial", "healthcare", "enterprise", "custom"],
          "enumDescriptions": [
            "No masking",
            "Basic - Email and phone only",
            "Financial Services - Banking, credit cards, account numbers",
            "Healthcare - Medical records and patient information",
            "Enterprise - All detection patterns enabled",
            "Custom - Use only user-defined patterns"
          ],
          "default": "none",
          "description": "Preset masking configuration for different industries"
        },
        "copyInfoWithContext.maskingDenyList": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Column names or patterns that should ALWAYS be masked (case-insensitive). Example: ['email', 'ssn', 'accountno', 'BSB', 'Client Number']"
        },
        "copyInfoWithContext.maskingAllowList": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Column names that should NEVER be masked, overriding auto-detection. Example: ['id', 'code', 'status']"
        },
        "copyInfoWithContext.maskingTypes": {
          "type": "object",
          "properties": {
            "email": { "type": "boolean", "default": true },
            "phone": { "type": "boolean", "default": true },
            "ssn": { "type": "boolean", "default": true },
            "creditCard": { "type": "boolean", "default": true },
            "address": { "type": "boolean", "default": true },
            "accountNumber": { "type": "boolean", "default": true },
            "ipAddress": { "type": "boolean", "default": false },
            "nmi": { "type": "boolean", "default": true },
            "australianBSB": { "type": "boolean", "default": true },
            "australianTFN": { "type": "boolean", "default": true },
            "australianABN": { "type": "boolean", "default": true },
            "australianMedicare": { "type": "boolean", "default": true },
            "clientNumber": { "type": "boolean", "default": true },
            "referenceNumber": { "type": "boolean", "default": false },
            "policyNumber": { "type": "boolean", "default": false },
            "transactionID": { "type": "boolean", "default": false },
            "iban": { "type": "boolean", "default": true },
            "swift": { "type": "boolean", "default": true },
            "routingNumber": { "type": "boolean", "default": false },
            "custom": { "type": "boolean", "default": false }
          },
          "default": {
            "email": true,
            "phone": true,
            "ssn": true,
            "creditCard": true,
            "address": true,
            "accountNumber": true,
            "ipAddress": false,
            "nmi": true,
            "australianBSB": true,
            "australianTFN": true,
            "australianABN": true,
            "australianMedicare": true,
            "clientNumber": true,
            "referenceNumber": false,
            "policyNumber": false,
            "transactionID": false,
            "iban": true,
            "swift": true,
            "routingNumber": false,
            "custom": false
          },
          "description": "Enable/disable masking for specific data types"
        },
        "copyInfoWithContext.showMaskingIndicator": {
          "type": "boolean",
          "default": true,
          "description": "Show visual indicator in status bar when masking is active"
        },
        "copyInfoWithContext.includeMaskingStats": {
          "type": "boolean",
          "default": false,
          "description": "Include statistics about masked items in copied output (e.g., '// 3 items masked')"
        },
        "copyInfoWithContext.maskingCustomPatterns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "pattern": { "type": "string" },
              "replacement": { "type": "string" },
              "enabled": { "type": "boolean" }
            }
          },
          "default": [],
          "description": "Custom regex patterns for company-specific sensitive data. Example: [{\"name\": \"Internal Customer ID\", \"pattern\": \"CUST-\\\\d{8}\", \"replacement\": \"CUST-########\", \"enabled\": true}]"
        }
      }
    },
    "keybindings": [
      {
        "command": "copyInfoWithContext.copySelection",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "copyInfoWithContext.copySelectionHTML",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h",
        "when": "editorTextFocus"
      },
      {
        "command": "copyInfoWithContext.cycleCsvOutputMode",
        "key": "ctrl+alt+x",
        "mac": "cmd+alt+x",
        "when": "editorTextFocus && (editorLangId == csv || editorLangId == tsv || editorLangId == psv)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "copyInfoWithContext.copySelection",
          "when": "editorHasSelection",
          "group": "9_cutcopypaste@2"
        },
        {
          "command": "copyInfoWithContext.copySelectionHTML",
          "when": "editorHasSelection", 
          "group": "9_cutcopypaste@3"
        },
        {
          "command": "copyInfoWithContext.copySelectionCustom",
          "when": "editorHasSelection",
          "group": "9_cutcopypaste@4"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^10.0.1",
    "@types/glob": "^8.0.0",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.19.0",
    "typescript": "^4.9.4",
    "eslint": "^8.28.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "glob": "^8.0.3",
    "mocha": "^10.2.0"
  }
}